{
    "dataRoles": [
        {
            "displayName": "Category",
            "name": "category",
            "kind": "Grouping",
            "description": "The category that you wish to group your data into."
        },
        {
            "displayName": "Sampling",
            "name": "sampling",
            "kind": "Grouping",
            "description": "The level you wish to aggregate your measure data at, to prevent incorrect aggregation prior to plotting."
        },
        {
            "displayName": "Measure Data",
            "name": "measure",
            "kind": "Measure",
            "description": "The values you wish to observe in your violin plot for each category.",
            "requiredTypes": [
                {
                    "numeric": true
                }
            ]
        }
    ],
    "objects": {
        "about": {
            "displayName": "About",
            "properties": {
                "visualName": {
                    "displayName": "Visual Name",
                    "type": {
                        "text": true
                    }
                },
                "version": {
                    "displayName": "Version",
                    "type": {
                        "text": true
                    }
                },
                "debugMode": {
                    "displayName": "Debug",
                    "type": {
                        "bool": true
                    }
                },
                "debugVisualUpdate": {
                    "displayName": "Visual Update",
                    "type": {
                        "bool": true
                    }
                },
                "debugProperties": {
                    "displayName": "Properties",
                    "type": {
                        "bool": true
                    }
                }
            }
        }
    },
    "dataViewMappings": [
        {
            "conditions": [
                {
                    "category": {
                        "max": 1
                    },
                    "sampling": {
                        "max": 1
                    },
                    "measure": {
                        "max": 1
                    }
                }
            ],
            "categorical": {
                "categories": {
                    "for": {
                        "in": "sampling"
                    }
                },
                "values": {
                    "group": {
                        "by": "category",
                        "select": [
                            {
                                "bind": {
                                    "to": "measure"
                                }
                            }
                        ]
                    }
                }
            }
        }
    ]
}
